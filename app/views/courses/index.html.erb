<h1>Listing courses</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Code</th>
    <th>Description</th>
    <th>Start at</th>
    <th>End at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<div class="paging-links">Links:
<% @links.each do |link| %>
  <a href="<%= link[0] %>"><%= link[1] %></a>
<% end %>
</div>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.id %></td>
    <td><%= course.name %></td>
    <td><%= course.code %></td>
    <td><%= course.description %></td>
    <td><%= course.start_at %></td>
    <td><%= course.end_at %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Register', register_course_path(course) %></td>
  </tr>
<% end %>
</table>

<br />

